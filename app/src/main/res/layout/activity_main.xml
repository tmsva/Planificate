<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingTop="10sp"
    tools:context=".ui.MainActivity">

    <fragment
        android:id="@+id/bip_status"
        android:name="tmsva.org.free.planificate.ui.BipStatusFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/ll_query_services"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="10sp"
        android:layout_below="@id/bip_status"
        android:visibility="gone">
        <EditText
            android:id="@+id/edt_stop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="PARADERO"/>
        <Button
            android:id="@+id/btn_services_by_location"
            android:layout_width="40sp"
            android:layout_height="wrap_content"
            android:onClick="onClick"/>
        <EditText
            android:id="@+id/edt_service"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="RECORRIDO"/>
        <Button
            android:id="@+id/btn_query_services"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CONSULTAR"
            android:onClick="onClick"/>
    </LinearLayout>

