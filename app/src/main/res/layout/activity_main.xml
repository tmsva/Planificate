        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/plano_metro_santiago_red"
        android:layout_below="@id/ll_query_services"/>

    <LinearLayout
        android:id="@+id/ll_query_grid"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/ll_query_services"
        android:visibility="gone">
        <GridView
            android:id="@+id/gv_query_headers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:numColumns="4"/>
        <GridView
            android:id="@+id/gv_query_items"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:numColumns="4"/>
    </LinearLayout>-->

    <FrameLayout
        android:id="@+id/fl_main_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bnv_main"
        android:layout_below="@id/ll_query_services">
        <com.github.chrisbanes.photoview.PhotoView
            android:id="@+id/pv_metro_plane"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/metrored_servicios_full_2018_08"
            android:scaleType="centerCrop"
            android:visibility="gone"/>
    </FrameLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bnv_main"
        app:menu="@menu/bnv_main_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        app:elevation="7sp"
        android:background="?android:attr/windowBackground"/>
</RelativeLayout>