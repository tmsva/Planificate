<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:padding="10sp">
    <EditText
        android:id="@+id/edt_stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="PARADERO"
        android:layout_alignParentStart="true"
        android:maxLength="8"/>
    <Button
        android:id="@+id/btn_services_by_location"
        android:layout_width="40sp"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:layout_toEndOf="@id/edt_stop"/>
    <EditText
        android:id="@+id/edt_service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="RECORRIDO"
        android:layout_toEndOf="@id/btn_services_by_location"/>
    <Button
        android:id="@+id/btn_query_services"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CONSULTAR"
        android:singleLine="true"
        android:ellipsize="none"
        android:onClick="onClick"
        android:layout_toEndOf="@id/edt_service"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/edt_service"
        android:orientation="vertical">
        <include android:id="@+id/arrivals_headers"
            layout="@layout/arrival_item"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_arrivals"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/arrivals_headers"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>
        <ProgressBar android:id="@+id/progressbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone"/>
    </RelativeLayout>
</RelativeLayout>